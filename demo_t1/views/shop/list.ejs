<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,inital-scale=1.0,maximum-scale=1.0,user-scalable=no"/>
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">

    <title>每日特卖———商铺列表</title>

    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">
    <link href="/stylesheets/style.css" rel="stylesheet" type="text/css"/>

    <!--[if lt IE 9]>
    <script src="/javascripts/respond.min.js"></script>
    <script src="/javascripts/html5shiv.min.js"></script>
    <![endif]-->
</head>
<body style="font-size: 12px">

<div class="container">
    <div class="row" style="margin-top: 5px">
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 hidden-sm hidden-xs">

        </div>
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
            <div id="container" class="panel panel-default">
                <div class="panel-heading text-center">
                    <div class="h1" style="display: inline-block">每日特卖</div>
                    <a href="/mine">
                        <img src="/images/user_default_icon.png" class="img-circle pull-right"
                             style="width: 40px; margin-top: 10px"/>
                    </a>
                </div>

                <div style="padding:15px">
                    特卖商家：
                </div>

                <% if (rows && rows.length) { %>

                <ul class="list-group">

                    <% rows.forEach(function(item){ %>

                    <li class="list-group-item">

                        <a href="/products/list/<%= item.id %>">
                            <div>
                                <img src="<%= item.icon %>" class="img-responsive img-rounded item-icon-lg">
                                <div style="display: inline-block; height: 30px; line-height:15px; vertical-align: middle; margin-left: 8px">
                                    <div class="item_title">
                                        <%= item.name %>
                                    </div>
                                    <div class="item_summary">
                                        <%= item.phoneNumber %>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </li>
                    <% }) %>
                </ul>
                <% } %>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 hidden-sm hidden-xs">

        </div>
    </div>
</div>

<script src="/javascripts/jquery.min.js"></script>
<script src="/javascripts/bootstrap.min.js"></script>
<script src="/javascripts/main.js"></script>

</body>
</html>